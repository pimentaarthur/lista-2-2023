using System;

    class program{

       public static void Main(String [] args){

            int d;

            d=int.Parse(Console.ReadLine());

            d = soma(d);

            Console.WriteLine(d);
        }

       static int soma(int n)

        {

            if (n <= 1){

                return 1;

        }
        
            return n + soma(n - 1);
        
    }

    }
        
        

        
    
